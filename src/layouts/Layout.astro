---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Licensed residential plumbing services in Greeneville, TN. Drain cleaning, pipe repair, and emergency plumbing. Call M & M Plumbing today!" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | M & M Plumbing - Greeneville, TN</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <!-- Top Bar -->
    <div class="bg-dark text-white text-sm">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-2">
          <div class="hidden md:flex items-center gap-6">
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Serving Greeneville, TN & Surrounding Areas
            </span>
          </div>
          <div class="flex items-center gap-6 ml-auto">
            <a href="tel:+14239468310" class="flex items-center gap-2 hover:text-primary-300 transition">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (423) 946-8310
            </a>
            <span class="hidden sm:flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Mon-Fri 8AM-5PM
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Header -->
    <header class="bg-white shadow-md sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="flex items-center gap-3">
            <div class="w-12 h-12 bg-primary-700 rounded-full flex items-center justify-center text-white font-bold text-lg">MM</div>
            <div>
              <span class="text-xl font-bold text-primary-700">M & M Plumbing</span>
              <span class="hidden sm:block text-xs text-gray-500">Licensed & Insured Since 2006</span>
            </div>
          </a>

          <!-- Desktop Nav -->
          <div class="hidden lg:flex items-center gap-8">
            <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition">Home</a>
            <a href="/services" class="text-gray-700 hover:text-primary-600 font-medium transition">Services</a>
            <a href="/reviews" class="text-gray-700 hover:text-primary-600 font-medium transition">Reviews</a>
            <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition">About Us</a>
            <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium transition">Contact</a>
          </div>

          <!-- CTA Button -->
          <a href="tel:+14239468310" class="hidden md:inline-flex bg-accent hover:bg-accent-hover text-white px-6 py-3 rounded font-semibold transition items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Now
          </a>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Nav -->
        <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t pt-4">
          <div class="flex flex-col gap-4">
            <a href="/" class="text-gray-700 hover:text-primary-600 font-medium">Home</a>
            <a href="/services" class="text-gray-700 hover:text-primary-600 font-medium">Services</a>
            <a href="/reviews" class="text-gray-700 hover:text-primary-600 font-medium">Reviews</a>
            <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium">About Us</a>
            <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium">Contact</a>
            <a href="tel:+14239468310" class="bg-accent text-white px-6 py-3 rounded font-semibold text-center">
              Call (423) 946-8310
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white">
      <div class="container mx-auto px-4 py-16">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
          <!-- About -->
          <div>
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 bg-primary-600 rounded-full flex items-center justify-center text-white font-bold">MM</div>
              <span class="text-xl font-bold">M & M Plumbing</span>
            </div>
            <p class="text-gray-400 mb-4">Your trusted plumbing professionals serving Greeneville and surrounding areas since 2006. Licensed, insured, and committed to quality.</p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-bold mb-6 text-white">Quick Links</h3>
            <ul class="space-y-3 text-gray-400">
              <li><a href="/" class="hover:text-white transition">Home</a></li>
              <li><a href="/services" class="hover:text-white transition">Our Services</a></li>
              <li><a href="/reviews" class="hover:text-white transition">Reviews</a></li>
              <li><a href="/about" class="hover:text-white transition">About Us</a></li>
              <li><a href="/contact" class="hover:text-white transition">Contact</a></li>
            </ul>
          </div>

          <!-- Services -->
          <div>
            <h3 class="text-lg font-bold mb-6 text-white">Our Services</h3>
            <ul class="space-y-3 text-gray-400">
              <li>Drain Cleaning</li>
              <li>Leak Detection & Repair</li>
              <li>Water Heater Services</li>
              <li>Pipe Repair & Replacement</li>
              <li>Fixture Installation</li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h3 class="text-lg font-bold mb-6 text-white">Contact Us</h3>
            <ul class="space-y-4 text-gray-400">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 mt-0.5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <a href="tel:+14239468310" class="hover:text-white transition">(423) 946-8310</a>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 mt-0.5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>Greeneville, TN<br />& Surrounding Areas</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 mt-0.5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Mon - Fri: 8AM - 5PM<br />Emergency Service Available</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="border-t border-gray-700">
        <div class="container mx-auto px-4 py-6">
          <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-gray-400 text-sm">
            <p>&copy; {new Date().getFullYear()} M & M Plumbing. All rights reserved.</p>
            <p>Serving Greeneville, Rogersville & Bulls Gap, TN</p>
          </div>
        </div>
      </div>
    </footer>

    <script>
      document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
        document.getElementById('mobile-menu')?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
